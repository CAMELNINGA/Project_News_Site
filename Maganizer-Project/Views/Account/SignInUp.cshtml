@model Maganizer_Project.BLL.DTO.SignUpUserDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In/Up</title>
    <meta charset="UTF-8">
    <link rel="icon" href="~/images/cropped-01-progress-32x32.gif" sizes="32x32">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="~/fonts/icon-font.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/animate.css">

    <link rel="stylesheet" type="text/css" href="~/css/hamburgers.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/animsition.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/select2.min.css">

    <link rel="stylesheet" type="text/css" href="~/css/daterangepicker.css">

    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/login.css">

</head>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title"
                     style="background-image: url(images/logo.svg); background-size: auto;">
                    <span class="login100-form-title-1">
                        <ul class="links">
                            <li class="signin-active">
                                <a class="btn">
                                    <h2>Sign in</h2>
                                </a>
                            </li>
                            <li class="signup-inactive">
                                <a class="btn">
                                    <h2>Sign up</h2>
                                </a>
                            </li>
                        </ul>
                    </span>
                </div>


                <div class="form-signin">
                    <form class="login100-form validate-form" action="" method="post" name="form">
                        <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                            <span class="label-input100">
                                <h5>Username</h5>
                            </span>
                            <input required class="input100" type="text" name="username"
                                   placeholder="Enter username">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span class="label-input100">
                                <h5>Password</h5>
                            </span>
                            <input required class="input100" type="password" name="pass"
                                   placeholder="Enter password">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="flex-sb-m w-full p-b-30">
                            <div class="remember-meCheckBox">
                                <input type="checkbox" name="remember-me">

                                <h6>Remember me</h6>

                            </div>
                            <div>
                                <a href="#" class="forgot">
                                    <h6>Forgot Password?</h6>
                                </a>
                            </div>
                        </div>
                        <div class="container-login100-form-btn">
                            <button class="sign-in-btn">
                                Sign In
                            </button>
                        </div>
                    </form>
                </div>

                <div class="form-signup-hidden">
                    <form class="login100-form validate-form" action="SignInUp" method="post">
                        <div class="wrap-input100 validate-input m-b-26">
                            <label asp-for="Fullname" class="label-input100"></label>
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                            <input asp-for="Fullname" class="input100"
                                   placeholder="Enter your full name">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-26">
                            <label asp-for="NewUsername" class="label-input100"></label>
                            <span asp-validation-for="NewUsername" class="text-danger"></span>
                            <input asp-for="NewUsername" class="input100"
                                   placeholder="Enter your username">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-26">
                            <label asp-for="Email" class="label-input100"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" class="input100"
                                   placeholder="Enter your email address">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-26">
                            <label asp-for="NewPassword" class="label-input100"></label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <input asp-for="NewPassword" class="input100"
                                   placeholder="Enter your password">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-26">
                            <label asp-for="ConfirmPassword" class="label-input100"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <input asp-for="ConfirmPassword" class="input100"
                                   placeholder="Enter your password again">
                            <span class="focus-input100"></span>
                        </div>
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div class="alert alert-danger" role="alert">
                                <a class="close" data-dismiss="alert">×</a>
                                @foreach (var modelError in Html.ViewData.ModelState.SelectMany(keyValuePair => keyValuePair.Value.Errors))
                                {
                                    <p>@modelError.ErrorMessage</p>
                                }
                            </div>
                        }
                        <div class="container-login100-form-btn">
                            <button type="submit" id="btnSignUp" class="sign-up-btn">
                                Sign Up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/jquery.min-3.5.1.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js'></script>
    <script src="~/js/scripts.js"></script>

</body>

</html>
